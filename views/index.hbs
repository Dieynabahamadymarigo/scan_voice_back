<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>
<body>

  <div class="card mb-3  container" *ngIf="inscripton">
    <div class="border-top"></div>
    <form action="/auth/register" method="post">
      <div class="row g-0 carte-connexion">

        <h2 class="text-inscription">Bienvenue sur notre Page d’Inscription</h2>

        <!-- <div class="col-md-5 image-login">
          <img src="../../../assets/images/login.png" class="img-fluid " alt="...">
        </div> -->

        <div class="col-md-7">
          <div class="card-body">
            <div class="champs-input">
              <div class="champs-de-saisir">
                <h5 class="card-title">Nom :</h5>
              </div>
              <div class="input">
                <input type="text" placeholder="votre nom" name="nom" [(ngModel)]="nom" (input)="verifNomFonction()"
                  required class="input-true">
                <!-- <input type="text" placeholder="votre nom" *ngIf="exactNom === true" class="input-false"> -->
                <p class="text-danger ms-1" *ngIf="exactNom == false">{{verifNom}}</p>
                <p class="text-success ms-0" *ngIf="exactNom == true"><i class="bi bi-check2-all"></i></p>

              </div>
            </div>

            <div class="champs-input">
              <div class="champs-de-saisir">
                <h5 class="card-title">Prenom :</h5>
              </div>
              <div class="input">
                <input type="text" placeholder="votre prenom" name="prenom" [(ngModel)]="prenom"
                  (input)="verifPreomFonction()" required>
                <p class="text-danger ms-1" *ngIf="exactPrenom == false">{{verifPrenom}}</p>
                <p class="text-success ms-0" *ngIf="exactPrenom == true"><i class="bi bi-check2-all"></i></p>
              </div>
            </div>

            <div class="champs-input">
              <div class="champs-de-saisir">
                <h5 class="card-title">Email :</h5>
              </div>
              <div class="input">
                <input type="email" placeholder="exemple@gmail.com" name="email" [(ngModel)]="email"
                  (input)="verifEmailFonction()" required>
                <p class="text-danger ms-1" *ngIf="exactEmail == false">{{verifEmail}}</p>
                <p class="text-success ms-0" *ngIf="exactEmail == true"><i class="bi bi-check2-all"></i></p>
              </div>
            </div>

            <div class="champs-input">
              <div class="champs-de-saisir">
                <h5 class="card-title">Password :</h5>
              </div>
              <div class="input">
                <input type="password" placeholder="**********" name="password" [(ngModel)]="password"
                  (input)="verifPasswordFonction()" required>
                <p class="text-danger ms-1" *ngIf="exactPassword == false">{{verifPassword}}</p>
                <p class="text-success ms-0" *ngIf="exactPassword == true"><i class="bi bi-check2-all"></i></p>
              </div>
            </div>

            <div class="champs-input">
              <div class="champs-de-saisir">
                <h5 class="card-title">Téléphone :</h5>
              </div>
              <div class="input">
                <input type="tel" placeholder="7* *** ** **" name="telephone" [(ngModel)]="telephone"
                  (input)="verifTelephoneFonction()" required>
                <p class="text-danger ms-1" *ngIf="exactTelephone == false">{{verifTelephone}}</p>
                <p class="text-success ms-0" *ngIf="exactTelephone == true"><i class="bi bi-check2-all"></i></p>
              </div>
            </div>

            <div class="champs-input">
              <div class="champs-de-saisir">
                <h5 class="card-title">Adresse :</h5>
              </div>
              <div class="input">
                <input type="text" placeholder="votre adresse" name="address" [(ngModel)]="address"
                  (input)="verifAdresseFonction()" required>
                <p class="text-danger ms-1" *ngIf="exactAdresse == false">{{verifAdresse}}</p>
                <p class="text-success ms-0" *ngIf="exactAdresse == true"><i class="bi bi-check2-all"></i></p>
              </div>
            </div>

            <div class="button-inscrire">
              <button class="inscrire"
                *ngIf="exactNom == true && exactPrenom == true && exactEmail == true &&  exactPassword == true && exactAdresse == true && exactTelephone == true">S'inscrire</button>

              {{!-- <button class="inscrire"
                *ngIf="exactNom == false || exactPrenom == false || exactEmail == false ||  exactPassword == false || exactAdresse == false || exactTelephone == false"
                disabled>S'inscrire</button> --}}
            </div>

            <div class="text-inscrire">
              <p class="text-question">Vous avez déjà un compte ?</p> <br>
              <h5 class="text-connect" (click)="afficherFrmConnexion()">Connectez-vous</h5>
            </div>

          </div>
        </div>


        <div class="col-md-5 image-login">
          <img src="../../../assets/images/login.png" class="img-fluid " alt="...">
        </div>

      </div>
    </form>

              {{!-- <button class="inscrire" href="./scan">Scan</button> --}}
              <a href="./scan">Scan</a>


  </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
